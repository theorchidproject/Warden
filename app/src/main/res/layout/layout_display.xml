<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_aurora"
        android:textAppearance="@style/TextAppearance.Aurora.Title"
        android:textSize="32sp"
        tools:text="82" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_secondary"
        style="@style/AuroraTextStyle.Title.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_primary"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        tools:text="apps" />
</RelativeLayout>